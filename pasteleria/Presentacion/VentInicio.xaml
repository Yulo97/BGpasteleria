<Window x:Class="pasteleria.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pasteleria"
        mc:Ignorable="d"
        Title="Inicio" Height="560" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="200" Background="#FFD8D8D8">
            <Grid x:Name="Ingredientes" Height="38" Background="#FFB3B3B3" MouseLeftButtonDown="OpenTabla">
                <Image HorizontalAlignment="Left" Height="38" VerticalAlignment="Center" Width="38" Source="/dona.png"/>
                <Label Margin="38,0,0,0" FontSize="20" Content="Ingredientes"/>
            </Grid>
            <Grid x:Name="Recetas" Height="38" Background="#FFB3B3B3" Margin="0,3,0,0" MouseLeftButtonDown="OpenTabla">
                <Image HorizontalAlignment="Left" Height="38" VerticalAlignment="Center" Width="38" Source="/dona.png"/>
                <Label Margin="38,0,0,0" FontSize="20" Content="Recetas"/>
            </Grid>
        </StackPanel>
        <Frame x:Name="FrameTablas" Margin="200,0,0,0"/>

    </Grid>
</Window>
